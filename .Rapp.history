	for(i in 1:dim(segments.to.plot)[1])#
	{#
		breaks = 99#
		x <- c()#
		y <- c()#
		temp.x <- c()#
		temp.y <- c()#
		for(j in 1:breaks)#
		{#
			temp.x[j] <- (segments.to.plot[i,5]-segments.to.plot[i,3])/breaks*j+segments.to.plot[i,3]#
