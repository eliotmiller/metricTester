	for(i in 1:dim(segments.to.plot)[1])#
	{#
		if(segments.to.plot$to[i] == "blue")#
		{#
			segments.to.plot$to.r[i] = 0#
			segments.to.plot$to.g[i] = 0#
			segments.to.plot$to.b[i] = 1#
		}#
		else if(segments.to.plot$to[i] == "cyan")#
		{#
			segments.to.plot$to.r[i] = 0#
			segments.to.plot$to.g[i] = 1#
			segments.to.plot$to.b[i] = 1#
