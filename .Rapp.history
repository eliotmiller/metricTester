		inds$Y2[inds$Y2 > y_max] <- inds$Y2[inds$Y2 > y_max]-y_max#
		inds$X2[inds$X2 < 0] <- inds$X2[inds$X2 < 0]+x_max#
		inds$Y2[inds$Y2 < 0] <- inds$Y2[inds$Y2 < 0]+y_max#
